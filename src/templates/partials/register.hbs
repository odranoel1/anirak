        <form action="" class="row mt-5">
            <div class="form-group col-sm-5 offset-sm-1 col-md-4 offset-md-2">

                <input
                    type="text"
                    class="form-control"
                    placeholder="Name"
                    autocomplete="off"
                    data-validate-field="name"
                    name="name">
            </div>
            <div class="form-group col-sm-5 col-md-4">
                <input
                    type="email"
                    class="form-control"
